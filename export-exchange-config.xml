<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-starter-parent</artifactId>
        <version>2.4.0</version>
        <relativePath/> <!-- lookup parent from repository -->
    </parent>
    <groupId>com.example.rabbitmq</groupId>
    <artifactId>rabbitmq-producer-excahnge-config</artifactId>
    <version>1.0.0-SNAPSHOT</version>
    <name>rabbitmq-producer-excahnge-config</name>
    <description>Demo project for RabbitMQ</description>

    <properties>
        <!-- 配置，需要导出的包 -->
        <export-api-package>com/example/rabbitmq/rabbitmqdemo/config/exchange</export-api-package>
        <java.version>1.8</java.version>
    </properties>

    <dependencies>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-amqp</artifactId>
        </dependency>

        <dependency>
            <groupId>org.projectlombok</groupId>
            <artifactId>lombok</artifactId>
            <optional>true</optional>
        </dependency>
        <dependency>
            <groupId>org.apache.commons</groupId>
            <artifactId>commons-pool2</artifactId>
        </dependency>
    </dependencies>

    <build>
       <sourceDirectory>src/main/java/${export-api-package}</sourceDirectory>
    </build>

</project>
